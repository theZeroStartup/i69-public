<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.i69.ui.views.CheckableImageButton
            android:id="@+id/gender_man"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:checkedSrc="@drawable/ic_man_checked"
            app:colorChecked="@color/white"
            app:colorDefault="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gender_woman"
            app:layout_constraintTop_toTopOf="parent"
            app:orientation="vertical"
            app:text="@string/man"
            android:checked="true"
            app:tintColorChecked="@color/wheat"
            app:tintColorDefault="@color/lightGray"
            app:uncheckedSrc="@drawable/ic_man_unchecked" />

        <com.i69.ui.views.CheckableImageButton
            android:id="@+id/gender_woman"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:checkedSrc="@drawable/ic_woman_checked"
            app:colorChecked="@color/white"
            app:colorDefault="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gender_man"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:orientation="vertical"
            app:text="@string/woman"
            app:tintColorChecked="@color/wheat"
            app:tintColorDefault="@color/lightGray"
            app:uncheckedSrc="@drawable/ic_woman_unchecked" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>