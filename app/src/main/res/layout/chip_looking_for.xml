<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="41dp">


    <RelativeLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.95"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:id="@+id/liear"
        android:background="@drawable/transp_background"
        android:layout_height="41dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tx2"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif"
            android:text="Chip Test"
            android:textAllCaps="false"
            android:textColor="#FBFBAB"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/myprofile_tags_bg"
            android:gravity="center"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Chip Test"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivClear"
        android:layout_toRightOf="@+id/liear"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/union_cross"
        android:padding="2dp"
        android:visibility="gone"
        android:layout_weight="0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>