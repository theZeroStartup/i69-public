<!--    android:background="@color/amp_blue"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="@drawable/linyer_plan_details_benifits">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/linyer_plan_details_benifits_text">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/purchasePackageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="@string/compare_platinum_plan"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_mark_right_round"
                android:id="@+id/imgPlatnium"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/image_plan_details_benifits_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_mark_right_round"
                android:id="@+id/imgGold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gold_plan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_round"
                android:id="@+id/imgSilver"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/image_plan_details_benifits_right" />
        </LinearLayout>
