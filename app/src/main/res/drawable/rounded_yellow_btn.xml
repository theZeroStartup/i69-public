<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/main_theme_gradient_pressed_end"
                android:startColor="@color/main_theme_gradient_pressed_start" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="0"
                android:endColor="@color/main_theme_gradient_default_start"
                android:startColor="@color/main_theme_gradient_default_end"
                android:type="linear" />
        </shape>
    </item>
</layer-list>