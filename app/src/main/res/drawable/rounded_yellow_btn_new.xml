<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="90"
                android:endColor="#B3FBDB84"
                android:startColor="#B3B48E39"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#B3FBDB84"/>
            <gradient
                android:angle="0"
                android:endColor="#B3B48E39"
                android:startColor="#B3FBDB84"
                android:type="linear" />
        </shape>
    </item>
</layer-list>